[MASTER]

# Disabled warnings.
disable=bad-whitespace,
        missing-docstring,
        too-many-arguments,
        fixme,
        invalid-name


# Names to ignore. Common to pandas, tensorpack, etc.
# good-names=df,
#            dp,
#            ds,
#            i,
#            j,
#            k,
#            x,
#            y,
#            z,
#            w,
#            h,
#            f

# Ignore modules that import in __init__.py because pylint does not parse.
ignored-modules=tensorpack,
                tensorpack.callbacks,
                tensorpack.dataflow,
                tensorpack.graph_builder,
                tensorpack.input_source,
                tensorpack.models,
                tensorpack.predict,
                tensorpack.tfutils,
                tensorpack.train,
                tensorpack.user_ops,
                tensorpack.utils

# Pickle collected data for later comparisons.
persistent=yes

# Use multiple processes to speed up Pylint.
jobs=2

# Allow loading of arbitrary C extensions. Extensions are imported into the
# active Python interpreter and may run arbitrary code.
unsafe-load-any-extension=no

